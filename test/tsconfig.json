{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es6"]
  },
  "include": [
    "specs/**/*",
    "setup/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../lib",
    "../index.ts"
  ]
}
